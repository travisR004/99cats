<h1>Book Your Cat Now!!!</h1>

<form action="<%= cat_rental_requests_url %>" method ='post' >
	<input
	name="authenticity_token"
	type="hidden"
	value="<%= form_authenticity_token %>">
	<label for="cat">Select Your Cat</label>
	<select name="cat_rental_request[cat_id]">
		<% Cat.all.each do |cat| %>
		<option value="<%=cat.id%>" selected><%= cat.name %></option>
		<% end %>
	</select>
	<br>

	<label for="start_date">Start Date</label>
	<input name="cat_rental_request[start_date]" id="start_date" type="date">
	<br>
	<label for="end_date">End Date</label>
	<input name="cat_rental_request[end_date]" id="end_date" type="date">

	<br>
	<input type="submit" value="Book Your Cat!">
</form>